<?xml version="1.0" encoding="utf-8"?><FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white" >    <LinearLayout        android:id="@+id/linear_delay_container"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical">        <ImageView            android:layout_width="wrap_content"            android:layout_height="62dp"            android:layout_gravity="right"            android:layout_marginRight="32dp"            android:background="@drawable/splash_arrow" />        <TextView            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="252" />        <ImageView            android:layout_width="wrap_content"            android:layout_height="110dp"            android:layout_gravity="center_horizontal" />        <TextView            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="510" />        <ImageView            android:id="@+id/image_delay_bottom_spec"            android:layout_width="match_parent"            android:layout_height="62dp" />        <ImageView            android:layout_width="match_parent"            android:layout_height="26dp"            android:layout_gravity="center"            android:gravity="center" />        <TextView            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="24" />    </LinearLayout>    <android.support.v4.view.ViewPager        android:id="@+id/splash_viewpager_id"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:overScrollMode="never"        android:visibility="gone">    </android.support.v4.view.ViewPager>    <LinearLayout        android:id="@+id/linear_update_container"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical"        android:visibility="gone">        <ImageView            android:layout_width="wrap_content"            android:layout_height="62dp"            android:layout_gravity="right"            android:layout_marginRight="32dp"            android:background="@drawable/splash_arrow" />        <TextView            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="80" />        <LinearLayout            android:id="@+id/linear_updating"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="80"            android:gravity="center_horizontal"            android:orientation="horizontal"            android:visibility="invisible" >            <ProgressBar                style="?android:attr/progressBarStyle"                android:layout_width="28dp"                android:layout_height="28dp"                android:layout_gravity="center_horizontal"                android:indeterminateDrawable="@drawable/progress_loading" />            <TextView                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:gravity="center_vertical"                android:paddingLeft="8dp"                android:text="@string/splash_update_data"                android:textColor="@color/text_gray_cccccc"                android:textSize="16sp" />        </LinearLayout>        <TextView            android:id="@+id/text_update_failed_prompt"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="50"            android:gravity="center_horizontal"            android:textColor="@color/text_gray_cccccc"            android:textSize="16sp" />        <TextView            android:id="@+id/text_update_failed_reason"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="50"            android:gravity="center_horizontal"            android:textColor="@color/text_gray_cccccc"            android:textSize="16sp" />        <TextView            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="250" />        <ImageView            android:id="@+id/image_update_bottom_spec"            android:layout_width="match_parent"            android:layout_height="62dp" />        <ImageView            android:layout_width="match_parent"            android:layout_height="26dp"            android:layout_gravity="center"            android:gravity="center"/>        <TextView            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="24" />    </LinearLayout></FrameLayout>